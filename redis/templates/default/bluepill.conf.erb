Bluepill.application("<%= @name %>") do |app|
  app.working_dir = "<%= @root %>"
  app.process("<%= @name %>") do |process|
    process.start_command = "/usr/bin/redis-server <%= @config_path %>"
    process.stop_command = "kill -QUIT {{PID}}"
    process.stdout = process.stderr = "<%= @log_path %>"
    process.pid_file = "<%= @pid_path %>"
    process.uid = "<%= @owner %>"
    process.gid = "<%= @group %>"
  end
end